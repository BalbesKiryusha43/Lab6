import random

def guess_the_number():
    print("Добро пожаловать в игру 'Угадай число'!")
    print("Я загадал число от 1 до 100. У тебя есть 10 попыток, чтобы угадать его.")
    
    # Загаданное число
    secret_number = random.randint(1, 100)
    attempts = 10  # Количество попыток
    
    for attempt in range(1, attempts + 1):
        try:
            # Получаем ввод от пользователя
            guess = int(input(f"Попытка {attempt}. Введите ваше предположение: "))
            
            if guess < 1 or guess > 100:
                print("Пожалуйста, введите число в диапазоне от 1 до 100.")
                continue
            
            # Проверяем введённое число
            if guess == secret_number:
                print(f"Поздравляю! Вы угадали число {secret_number} с {attempt} попытки!")
                break
            elif guess < secret_number:
                print("Моё число больше.")
            else:
                print("Моё число меньше.")
        except ValueError:
            print("Пожалуйста, введите корректное число.")
    else:
        print(f"К сожалению, вы проиграли. Загаданное число было {secret_number}.")
        
# Запуск игры
if __name__ == "__main__":
    guess_the_number()


